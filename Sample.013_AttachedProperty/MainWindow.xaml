        </StackPanel>

        <!-- Attached property -->
        <StackPanel x:Name="spParent" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"
                    atcp:SetFontPanel.ChildrenFontSize="15" 
                    atcp:SetFontPanel.ChildrenForeground="Red" 
                    atcp:SetFontPanel.Attach="True">
